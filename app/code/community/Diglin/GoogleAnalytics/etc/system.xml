<config>
    <sections>
        <google>
            <groups>
                <analytics>
                    <fields>
                        <universal_analytics translate="label">
                            <label>Enable the Universal Analytics</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment><![CDATA[More information <a href="https://support.google.com/analytics/answer/2790010?hl=en">https://support.google.com/analytics/answer/2790010?hl=en</a>]]></comment>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </universal_analytics>
                    </fields>
                </analytics>
            </groups>
        </google>
    </sections>
</config>
